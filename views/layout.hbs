<!DOCTYPE html>
<html>

<head>
  <title>CopyChef</title>
  <script type="text/javascript" src='/javascripts/jquery.js'></script>
  <script type="text/javascript" src='/javascripts/underscore.js'></script>
  <script type="text/javascript" src='/javascripts/backbone.js'></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js"></script>
  <script type="text/javascript" src="/javascripts/materialize.min.js"></script>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/materialize.min.css" media="screen" title="no title" charset="utf-8">
  <link rel="stylesheet" href="/stylesheets/styles.css" media="screen" title="no title" charset="utf-8">
  <link rel="stylesheet" href="/stylesheets/search.css">
  <link rel="shortcut icon" type="image/png" href="/favico.png"/>
  <meta charset="utf-8">
  <title>CopyChef</title>
</head>


<body>
<!-- Start of nav -->
<nav>
  <div class="nav-wrapper">
    <a href="/" class="brand-logo"><img src="/media/logo.png"></a>


<!-- Auto-complete function -->
    <script>
      $(function () {
        var availableTags = allTags;
        $( "#all_search_auto_complete" ).autocomplete({
          source: availableTags,
          select: function(event, ui) {
             $("#all_search_auto_complete").val(ui.item.label);
             var userSelectedSearch = this.value;
             // call a function that will submit the ajax/submit post/etc
            refreshData(userSelectedSearch);
          }
        });
      });
      </script>

<!-- Search form -->
    <form id="all-search-form" method="get">
      <input type="text" name="keyword" class="searchbox" placeholder="Search" id="all_search_auto_complete"></input>
    </form>


    <ul id="nav-mobile" class="right">
      <li><a href="/">Home</a></li>
      {{#if user}}
      <li><a href="/add_recipe">Add Recipe</a></li>
      <li><a href="/account/logout">Logout</a></li>
      {{else}}
      <li><a href="/account/login">Login</a></li>
      <li><a href="/account/register">Register</a></li>
      {{/if}}
    </ul>
  </div>
</nav>

<!-- end of nav -->

  {{{body}}}
  
</body>

</html>
