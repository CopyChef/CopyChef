<div class="section">
  <div class="container">
    <!-- <div class="container"> -->
    <div class="row">

      <section id='recipe-listing'>
      </section>
      <script type="text/javascript">
        function ImgError(source) {
          source.src = "https://www.newstalk.com/content/000/images/000095/97784_60_news_hub_multi_630x0.png";
          source.onerror = "";
          return true;
        }
      </script>
      <!-- start template -->
      <script type='text/template' id='recipe-template'>
        <article>
          <!-- card w image from docs -->
          <div class="col s12 m6 l4">
            <div class="card hoverable ">
              <div class="card-image">

                <a href="/recipes/individual/<%= _id %>"><img src="<%= RecipeImage %>" onerror="ImgError(this)" /></a>
                <span class="card-title">
                  <h5>
                    <%= Restaurant %>
                      <%= NameOfDish %>
                  </h5>
                </span>
              </div>
              <div class="card-content">
                <p><i class="material-icons">schedule</i>
                  <%= CookTime %>
                </p>

                <div class="card-recipe-tags">
                  <!-- <div class="chip">tag</div> -->
                  <% for (var i = 0; i < Tags.length; i++) { %>
                    <div class="chip">
                      <%= Tags[i] %>
                    </div>
                    <%  } %>
                </div>
              </div>
              <!-- <div class="card-action">
                    <a href="#">This is a link</a>
                  </div> -->
            </div>
          </div>
          <!-- end card -->

        </article>
      </script>
      <!-- end template -->

